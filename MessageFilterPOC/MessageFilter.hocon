akka {
	actor {
		provider = cluster
		
		deployment {
			/BucketCEO/bucket {
				router = round-robin-pool
				nr-of-instances = 500 # max number of total routees
				cluster {
					enabled = on
					allow-local-routees = on
					use-role = bucket
					max-nr-of-instances-per-node = 1
				}
			}

		}
	}

	remote {
			dot-netty.tcp {
				port = 6969
				hostname = localhost
			}
	}

	cluster {
		seed-nodes = ["akka.tcp://MessageFilterSystem@localhost:6969"]
		roles = ["myRouter"]
	}
}